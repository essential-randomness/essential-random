---
import avatar from "../images/avatar.png";
---

<aside class="h-card card">
  <img class="avatar u-logo" src={avatar.src} alt="Ms Boba's avatar" />
  <div class="p-name">
    <a href="/" rel="me" class="u-url"> Essential Randomness</a>
  </div>
  <div class="nickname">
    a.k.a. <span class="p-nickname">Ms Boba</span>
  </div>
  <div class="p-note">
    Software Engineer, Fandom Person & Other Random Stuff. Full Stack Human.
    #queeredge
  </div>
</aside>

<style>
  .card {
    border: 2px solid black;
    box-shadow: var(--box-shadow);
    padding: 10px 15px;
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    gap: 5px;

    & + .card {
      margin-top: 20px;
    }

    * {
      line-height: 1.3;
    }

    h2 {
      margin-bottom: 5px;
      text-align: center;
    }

    img {
      width: 100%;
      height: auto;
      max-width: 400px;
      align-self: center;
    }

    .p-name {
      margin: 0;
      font-family: var(--font-family-title);
      font-weight: 800;
      font-size: x-large;

      a {
        line-height: 1.1;
        display: block;
      }
    }
    .nickname {
      font-size: small;
    }
  }

  dl {
    margin-top: 0;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  dt {
    font-weight: 800;
  }

  dd {
    margin-left: 10px;
  }
  @media (max-width: 800px) {
    .p-name a {
      font-size: 19px;
    }
  }

  @media (max-width: 650px) {
    .card {
      display: grid;
      grid-template-columns: 20% 80%;
      column-gap: 10px;
      align-items: center;
    }
    .avatar {
      grid-row-start: span 3;
    }
    .p-name a {
      font-size: x-large;
    }
  }
</style>
